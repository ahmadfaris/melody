<div class="page_wrapper">
  <aside class="col-md-4">
    <section class="user_info">
      <%
=begin %>
      <h1>
        <%= @restaurant.name %>
      </h1>

      <%= image_tag @restaurant.image.url(:medium) %>

      <h2>
      	<li><%= @restaurant.address %></li>
      	<li><%= @restaurant.category %></li>
      	<li><%= @restaurant.lat %></li>
      	<li><%= @restaurant.lng %></li>
      </h2>
    </section>
  </aside>
</div>
<%
=end %>


<div class="main_content">
  <div class="row" id="recipe_top">
    <div class="col-md-4">
      <%= image_tag @restaurant.image.url(:medium), class: "recipe_image" %>
    </div>
    <div class="col-md-8">
      <div id="recipe_info">
        <h1>
          <%= @restaurant.name %>
        </h1>
        <p class="description">
          <%= @restaurant.address %>
        </p>
      </div>
    </div>
  </div>

  <%
=begin %>
  <div class="row">
    <div class="col-md-6">
      <div id="ingredients">
        <h2>Addon description</h2>
        <ul>
          <% @restaurant.foods.each do |food| %>
            <li>
              <%= food.name %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-md-6">
      <div id="directions">
        <h2>Itinerary</h2>
        <ul>
          <% @restaurant.drinks.each do |drink| %>
            <li>
              <%= drink.step %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  
<%
=end %>

  <div class="row">
    <div class="col-md-12">
      <%= link_to "Back", root_path, class: "btn btn-default" %>
      <% if user_signed_in? %>
        <%= link_to "Edit", edit_restaurant_path, class: "btn btn-default" %>
        <%= link_to "Delete", restaurant_path, method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
