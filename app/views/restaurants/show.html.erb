=begin %>
  <div class="row">
    <div class="col-md-6">
      <div id="ingredients">
        <h2>Addon description</h2>
        <ul>
          <% @restaurant.foods.each do |food| %>
            <li>
              <%= food.name %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-md-6">
      <div id="directions">
        <h2>Itinerary</h2>
        <ul>
          <% @restaurant.drinks.each do |drink| %>
            <li>
              <%= drink.step %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

<%
=end %>

</div>
