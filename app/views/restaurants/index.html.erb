<div class="page_wrapper">
	<div class="container-fluid">
	  <div class="row">
	  	<div class="col-md-11 col-md-offset-1">


            <div class="table-responsive">
              <table class="table table-hover borderless" id="table">
                <thead>
                  <tr>
                    <td>Restaurant Logo</td>
                    <td>Restaurant Name</td>
                    <td>Category</td>
                  </tr>
                </thead>

                <% @restaurants.each do |restaurant| %>
                  <tr>
                    <td> <%= image_tag restaurant.image.url(:thumb), class: "recipe_image" %> </td>
                    <td> <%= link_to restaurant.name, restaurant %> </td>
                    <td> <%= link_to restaurant.category, restaurant %> </td>
                  </tr>
                <% end %>


              </table>
            </div>


          <%= paginate @restaurants,:theme => 'twitter-bootstrap-3', :pagination_class => "pagination-sm" %>

			</div>
		</div>
	</div>
</div>